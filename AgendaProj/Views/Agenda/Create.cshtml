<form  action="Create" method="Post">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label >Nome do Solicitante</label>
      <input type="text" class="form-control" name="name" placeholder="Nome">
    </div>
    <div class="form-group col-md-6">
      <label>Email</label>
      <input type="email" class="form-control" name="email"  placeholder="Email">
    </div>
  </div>
  <div class="form-group col-md-12">
    <label >Telefone</label>
    <input type="text" class="form-control" name="fone"  placeholder="Telefone">
  </div>
  <div class="form-group col-md-12 ">
    <label >Descrição do Problema</label>
    <textarea type="text" class="form-control" name="descricao" placeholder="Descricao do Problema "></textarea>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Numero da Chamada</label>
      <input type="text" class="form-control" name="numChamada" placeholder="Numero Chamada">
    </div>
    <div class="form-group col-md-6">
      <label>Data</label>
      <input type="date" class="form-control" name="data" placeholder="Data">
    </div>
     <div class="form-group col-md-6">
      <label>Hora Inicio da Chamada</label>
      <input type="time" class="form-control" name="horaInicio" placeholder="Hora de inicio da chamada">
    </div>
    <div class="form-group col-md-6">
      <label>Hora Final da Chamada</label>
      <input type="time" class="form-control" name="horaFim" placeholder="Hora de Término da chamada">
    </div>
    
  </div>
  <div class="container">
  <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>
    </div>
</form>


