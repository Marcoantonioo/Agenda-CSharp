      <label for="client.id">Cliente</label>
                <select class="form-control" name="client.id">
                    @foreach(var client in @ViewBag.cliente)
                    {
                        <option value=@client.id>@client.nome</option>
                    }
                </select>

                <label for="sit.id">Situação</label>
