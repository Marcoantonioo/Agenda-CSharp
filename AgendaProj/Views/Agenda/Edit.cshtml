@model AgendaProj.Models.Agenda

<div class="form-horizontal">
    <form action="Edit" method="Post">

        <div class="form-group">
            <label>Id</label>
            <input  class="form-control"
                    type="text" 
                    name="id"
                    value="@Model.id" readonly="true"/>
        </div>

        <div class="form-group">
            <label>Nome</label>
            <input  class="form-control"
                    type="text"
                    name="name"
                    value="@Model.name" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input  class="form-control"
                    type="text" 
                    name="email"
                    value="@Model.email"/>
        </div>
        <div class="form-group">
            <label>Fone</label>
            <input  class="form-control"
                    type="text" 
                    name="fone"
                    value="@Model.fone"/>
        </div>
        <div class="form-group">
            <label>Descricao do Problema</label>
            <input  class="form-control"
                    type="text" 
                    name="descricao"
                    value="@Model.descricao"/>
        </div>
        <div class="form-group">
            <label>Numero da chamada</label>
            <input  class="form-control"
                    type="text" 
                    name="numChamada"
                    value="@Model.numChamada" readonly="true"/>
        </div>
        <div class="form-group">
            <label>Data</label>
            <input  class="form-control"
                    type="date" 
                    name="data"
                    value="@Model.data"/>
        </div>
        <div class="form-group">
            <label>Hora inicio</label>
            <input  class="form-control"
                    type="time" 
                    name="horaInicio"
                    value="@Model.horaInicio"/>
        </div>
       <div class="form-group">
            <label>Hora Fim</label> 
            <input  class="form-control"
                    type="time" 
                    name="horaFim"
                    value="@Model.horaFim"/>
        </div>
        

        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>

    </form>
</div>